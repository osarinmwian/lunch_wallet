<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".common.checkmail.CheckMailFragment">


    <ImageView
        android:id="@+id/consumer_check_mail_imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="108dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_frame_40" />

    <TextView
        android:id="@+id/consumer_check_mail_textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/manrope_extrabold"
        android:text="@string/check_mail"
        android:textAlignment="center"
        android:textColor="@color/text_color"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/consumer_check_mail_imageView1"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/consumer_check_mail_imageView1"
        app:layout_constraintTop_toBottomOf="@+id/consumer_check_mail_imageView1" />

    <TextView
        android:id="@+id/consumer_check_mail_textView3"
        android:layout_marginHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/manrope_regular"
        android:text="@string/we_have_sent_a_password_recover_instruction_to_your_account"
        android:textAlignment="center"
        android:textColor="@color/text_color"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/consumer_check_mail_textView2"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="@+id/consumer_check_mail_textView2"
        app:layout_constraintTop_toBottomOf="@+id/consumer_check_mail_textView2" />

    <Button
        android:id="@+id/consumer_check_mail_button"
        android:layout_marginHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/theme_color"
        android:fontFamily="@font/manrope_bold"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="@string/open_mail_app"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/consumer_check_mail_textView3"
        app:layout_constraintStart_toStartOf="@+id/consumer_check_mail_textView3"
        app:layout_constraintTop_toBottomOf="@+id/consumer_check_mail_textView3" />

    <TextView
        android:id="@+id/consumer_check_mail_textView4"
        android:layout_width="309dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="92dp"
        android:fontFamily="@font/manrope_regular"
        android:gravity="left"
        android:text="@string/did_not_receive_the_email_check_your_spam_filter_or"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/consumer_check_mail_button"
        app:layout_constraintStart_toStartOf="@+id/consumer_check_mail_button"
        app:layout_constraintTop_toBottomOf="@+id/consumer_check_mail_button"
        app:layout_constraintVertical_bias="0.753" />

    <TextView
        android:id="@+id/consumer_check_mail_textView5"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginEnd="113dp"
        android:fontFamily="@font/manrope_extrabold"
        android:gravity="center"
       android:layout_marginBottom="2dp"
        android:text="@string/try_another_email"
        android:textColor="@color/theme_color"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/consumer_check_mail_textView4"
        app:layout_constraintEnd_toEndOf="@+id/consumer_check_mail_textView4"
        app:layout_constraintTop_toTopOf="@+id/consumer_check_mail_textView4"
        app:layout_constraintVertical_bias="1.13" />

</androidx.constraintlayout.widget.ConstraintLayout>
