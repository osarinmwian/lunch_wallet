<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:id="@+id/selectTypeFragment"
    tools:context=".common.selectType.SelectTypeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginTop="27dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/selectTypeFragment_layout_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:layout_gravity="center"
            android:fontFamily="@font/manrope_bold"
            android:text="@string/lunch_wallet"
            android:layout_marginTop="15dp"
            android:textColor="@color/text_color"
            android:textSize="16sp"
            app:drawableStartCompat="@drawable/ic_cuisine" />

        <TextView
            android:id="@+id/selectTypeFragment_headerTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/manrope_bold"
            android:layout_marginTop="40dp"
            android:text="@string/select_type"
            android:textColor="@color/text_color"
            android:textSize="24sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:orientation="vertical"
        android:weightSum="3">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            android:layout_weight="1"
            android:layout_marginBottom="8dp"
            app:cardElevation="5dp">

            <TextView
                android:id="@+id/selectTypeFragment_foodBeneficiaryTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/food_beneficiary"
                android:clickable="true"
                android:focusable="true"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="23dp"
                android:paddingBottom="23dp"
                android:background="@drawable/border"
                android:textColor="@color/selecttext"
                android:textSize="14sp"
                android:fontFamily="@font/manrope_medium"
                app:drawableEndCompat="@drawable/ic_arrow_right" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            android:layout_weight="1"
            android:layout_marginBottom="8dp"
            app:cardElevation="5dp">

            <TextView
                android:id="@+id/selectTypeFragment_kitchenStaffTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/border"
                android:textColor="@color/selecttext"
                android:fontFamily="@font/manrope_medium"
                android:text="@string/kitchen_staff"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="23dp"
                android:paddingBottom="23dp"
                app:drawableEndCompat="@drawable/ic_arrow_right"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>
